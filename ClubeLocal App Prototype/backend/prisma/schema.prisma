// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  COMPANY
  CUSTOMER
}

enum DiscountType {
  PERCENTAGE
  FIXED
  FREEBIE
}

enum CouponStatus {
  PENDING
  APPROVED
  REJECTED
}

enum CompanyStatus {
  ACTIVE
  PENDING
  SUSPENDED
}

enum SubscriptionStatus {
  ACTIVE
  CANCELLED
  EXPIRED
}

enum PlanType {
  MONTHLY
  YEARLY
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  fullName  String   @map("full_name")
  phone     String?
  role      UserRole
  avatarUrl String?  @map("avatar_url")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  company       Company?
  subscriptions Subscription[]
  couponUsages  CouponUsage[]
  favorites     Favorite[]

  @@map("users")
}

model Company {
  id          String        @id @default(uuid())
  userId      String        @unique @map("user_id")
  name        String
  logoUrl     String?       @map("logo_url")
  description String?
  categoryId  String?       @map("category_id")
  address     String?
  city        String?
  phone       String?
  instagram   String?
  website     String?
  isActive    Boolean       @default(true) @map("is_active")
  status      CompanyStatus @default(PENDING)
  createdAt   DateTime      @default(now()) @map("created_at")
  updatedAt   DateTime      @updatedAt @map("updated_at")

  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  category Category? @relation(fields: [categoryId], references: [id])
  coupons  Coupon[]

  @@map("companies")
}

model Category {
  id        String   @id @default(uuid())
  name      String
  icon      String?
  createdAt DateTime @default(now()) @map("created_at")

  companies Company[]
  coupons   Coupon[]

  @@map("categories")
}

model Coupon {
  id               String         @id @default(uuid())
  companyId        String         @map("company_id")
  categoryId       String?        @map("category_id")
  title            String
  description      String
  discountType     DiscountType   @map("discount_type")
  discountValue    Float?         @map("discount_value")
  imageUrl         String?        @map("image_url")
  termsConditions  String?        @map("terms_conditions")
  validFrom        DateTime       @map("valid_from")
  validUntil       DateTime       @map("valid_until")
  maxUsesPerUser   Int            @default(1) @map("max_uses_per_user")
  totalUsesLimit   Int?           @map("total_uses_limit")
  isActive         Boolean        @default(false) @map("is_active")
  status           CouponStatus   @default(PENDING)
  createdAt        DateTime       @default(now()) @map("created_at")
  updatedAt        DateTime       @updatedAt @map("updated_at")

  company      Company       @relation(fields: [companyId], references: [id], onDelete: Cascade)
  category     Category?     @relation(fields: [categoryId], references: [id])
  couponUsages CouponUsage[]
  favorites   Favorite[]

  @@map("coupons")
}

model Subscription {
  id            String             @id @default(uuid())
  userId        String             @map("user_id")
  planType      PlanType           @map("plan_type")
  status        SubscriptionStatus
  price         Float
  startDate     DateTime           @map("start_date")
  endDate       DateTime           @map("end_date")
  paymentMethod String?            @map("payment_method")
  paymentId     String?            @map("payment_id")
  createdAt     DateTime           @default(now()) @map("created_at")
  updatedAt     DateTime           @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("subscriptions")
}

model CouponUsage {
  id        String    @id @default(uuid())
  couponId  String    @map("coupon_id")
  userId    String    @map("user_id")
  code      String    @unique
  usedAt    DateTime? @map("used_at")
  isUsed    Boolean   @default(false) @map("is_used")
  createdAt DateTime  @default(now()) @map("created_at")

  coupon Coupon @relation(fields: [couponId], references: [id], onDelete: Cascade)
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("coupon_usage")
}

model Favorite {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  couponId String   @map("coupon_id")
  createdAt DateTime @default(now()) @map("created_at")

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  coupon Coupon @relation(fields: [couponId], references: [id], onDelete: Cascade)

  @@unique([userId, couponId])
  @@map("favorites")
}
